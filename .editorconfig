# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

# HTML files
[*.{html,htm}]
indent_style = tab
indent_size = 4

# CSS files
[*.css]
indent_style = tab
indent_size = 4

# JavaScript files
[*.js]
indent_style = tab
indent_size = 4

# Markdown files
[*.md]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = false

# Go files
[*.go]
indent_style = tab
indent_size = 4
